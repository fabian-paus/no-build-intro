{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ES2022",
    "moduleResolution": "node",

    // Enable checking Javascript and do not emit anything
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  }
}
